{
    "manifest_version" : 3,
    "name" : "Filter-Youtube",
    "version" : "0.0.1",
    "description" : "Filter the distraction from Youtube",
    "content_scripts": [
        {
            "matches" : ["https://*.youtube.com/*"],
            "css":["main.css"],
            "js":["content.js"],
            "run_at": "document_start",
            "all_frames":true
        }
    ],
    "action":{
        "default_title":"Filter Youtube - Filter the distractions",
        "default_popup":"popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions":[
        "activeTab",
        "tabs",
        "webNavigation",
        "storage"
    ]
}