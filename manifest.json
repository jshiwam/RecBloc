{
    "manifest_version" : 3,
    "name" : "RecBloc",
    "version" : "0.0.1",
    "description" : "Filter the distraction from Youtube",
    "content_scripts": [
        {
            "matches" : ["https://*.youtube.com/*"],
            "css":["main.css"],
            "js":["content.js"],
            "run_at": "document_start",
            "all_frames":true
        }
    ],
    "action":{
        "default_title":"RecBloc - Filter the distractions",
        "default_popup":"popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions":[
        "storage"
    ],
    "icons": { "16": "./assets/RecBloc16.png",
        "48": "./assets/RecBloc48.png",
       "128": "./assets/RecBloc128.png" 
    }
}